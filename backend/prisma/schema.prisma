// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.svg"
  theme    = "dark"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int    @id @default(autoincrement())
  nome  String
  email String
  senha String

  tarefa Tarefa[]
  perfil Perfil?

  criado_em       DateTime          @default(now())
  atualizado_em   DateTime          @default(now()) @updatedAt
  DiaTarefa       DiaTarefa[]
  TarefaDiaSemana TarefaDiaSemana[]

  @@unique([email])
  @@map("usuario")
}

model Tarefa {
  id     Int       @id @default(autoincrement())
  titulo String
  inicio DateTime
  fim    DateTime?

  DiaTarefa DiaTarefa[]

  DiaSemana TarefaDiaSemana[]
  User      Usuario?          @relation(fields: [userId], references: [id])
  userId    Int

  criado_em   DateTime @default(now())
  atualido_em DateTime @default(now()) @updatedAt

  @@map("tarefa")
}

model Perfil {
  id   Int     @id @default(autoincrement())
  nome String?
  key  String?
  url  String?

  userAvatar    Usuario  @relation(fields: [userId], references: [id])
  userId        Int      @unique
  criado_em     DateTime @default(now())
  atualizado_em DateTime @default(now()) @updatedAt

  @@map("perfil")
}

model Dia {
  id        Int         @id @default(autoincrement())
  data      DateTime
  DiaTarefa DiaTarefa[]

  criado_em   DateTime @default(now())
  atualido_em DateTime @default(now()) @updatedAt

  @@unique([data])
  @@map("dia")
}

model DiaTarefa {
  id Int @id @default(autoincrement())

  dia_id     Int
  tarefa_id  Int
  usuario_id Int

  dia     Dia     @relation(fields: [dia_id], references: [id])
  tarefa  Tarefa  @relation(fields: [tarefa_id], references: [id])
  usuario Usuario @relation(fields: [usuario_id], references: [id])

  criado_em   DateTime @default(now())
  atualido_em DateTime @default(now()) @updatedAt

  @@unique([dia_id, tarefa_id])
  @@map("dia_tarefa")
}

model TarefaDiaSemana {
  id         Int @id @default(autoincrement())
  tarefa_id  Int
  dia_semana Int
  usuario_id Int

  tarefa  Tarefa  @relation(fields: [tarefa_id], references: [id])
  usuario Usuario @relation(fields: [usuario_id], references: [id])

  criado_em   DateTime @default(now())
  atualido_em DateTime @default(now()) @updatedAt

  @@unique([tarefa_id, dia_semana])
  @@map("tarefa_dia_semana")
}
